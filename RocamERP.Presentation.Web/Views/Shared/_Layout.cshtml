<!DOCTYPE html>
<html>
<head>
    <link rel="icon" href="~/Content/Images/icons/favicon.ico" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"/>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Rocam Controle</title>
    @RenderSection("custom-css", required: false)

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-toggleable-sm navbar-light bg-faded fixed-top pt-0 pb-0 pr-0">
        @Html.ActionLink("Rocam", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler-right navbar-toggler" data-target=".navbar-collapse" data-toggle="collapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse">
            <div class="navbar-nav ml-auto">
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-item nav-link" })
                <strong>
                    @Html.ActionLink("Cheques", "Index", "Cheques", new { area = "Plataforma" }, new { @class = "nav-item nav-link" })
                </strong>
                @Html.ActionLink("Cidades", "Index", "Cidades", new { area = "Plataforma" }, new { @class = "nav-item nav-link" })
                @Html.ActionLink("Estados", "Index", "Estados", new { area = "Plataforma" }, new { @class = "nav-item nav-link" })
                <strong>
                    @Html.ActionLink("Pessoas", "Index", "Pessoas", new { area = "Plataforma" }, new { @class = "nav-item nav-link" })
                </strong>
                @Html.ActionLink("Bancos", "Index", "Bancos", new { area = "Plataforma" }, new { @class = "nav-item nav-link" })

                @Html.Partial("_PartialViews/_loginInformation")
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr class="mt-5"/>
        <footer>
            <p>&copy; @DateTime.Now.Year - Rocam ERP</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/customjs")
    @RenderSection("scripts", required: false)
</body>
</html>
