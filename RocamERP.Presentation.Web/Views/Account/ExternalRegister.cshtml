@model RocamERP.CrossCutting.Identity.ViewModels.ExternalRegisterViewModel

@{
    ViewBag.Title = "Registro Externo";
}

<h2>Registro Externo</h2>
<h6>Confirmar registro usando provedor externo</h6>
<hr />

@using (Html.BeginForm("ExternalRegister", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div>
            @Html.EditorForModel()
        </div>

        @Html.SubmitButton("Entrar")
    </div>
}

<div>
    @Html.ActionLink("Página Anterior", "Index", "Home")
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")    
}