@model RocamERP.Presentation.Web.ViewModels.CidadeViewModels.CidadeViewModel

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

<div class="form-group">
    @Html.LabelFor(model => model.Nome, new { @class = "col-form-label" })
    <div class="col-12">
        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.EstadoId, new { @class = "col-form-label" })
    <div class="col-12">
        @Html.DropDownListFor(model => model.EstadoId, Model.EstadosList, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.EstadoId, "", new { @class = "text-danger" })
    </div>
</div>
