@model RocamERP.Presentation.Web.ViewModels.ContatoViewModel

@Html.ValidationSummary(false, "", new { @class = "text-danger" })
@Html.HiddenFor(model => model.PessoaId, new { @value = ViewBag.PessoaId })

<div class="form-group">
    @Html.LabelFor(model => model.PessoaId, new { @class = "col-form-label"})
    <div>
        @if(Model.Pessoa != null)
        {
            @Html.ActionLink($"{Model.Pessoa.Nome}", "Details", new { @id = Model.PessoaId })
        }
        else
        {
            @Html.Raw("Os dados da pessoa não puderam ser recuperados.")
        }
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Informacao, new { @class = "col-form-label" })
    <div class="col-12">
        @Html.TextBoxFor(model => model.Informacao, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Informacao, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Observacao, new { @class = "col-form-label" })
    <div class="col-12">
        @Html.TextAreaFor(model => model.Observacao, new { @class = "form-control col-8", @rows = "10" })
        @Html.ValidationMessageFor(model => model.Observacao, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.TipoContato, new { @class = "col-form-label" })
    <div class="col-12">
        @Html.EnumDropDownListFor(model => model.TipoContato, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.TipoContato, "", new { @class = "text-danger" })
    </div>
</div>

