@model RocamERP.Presentation.Web.ViewModels.CadastroEstadualViewModel

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

<div class="form-group">
    @Html.LabelFor(model => model.TipoCadastroEstadual, new { @class = "col-form-label" })
    <div class="col-12">
        @Html.DropDownList("TipoCadastroEstadual", null, string.Empty, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.NumeroDocumento, new { @class = "col-form-label" })
    <div class="col-12">
        @Html.TextBoxFor(model => model.NumeroDocumento, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.NumeroDocumento, "", new { @class = "text-danger" })
    </div>
</div>