@model RocamERP.Presentation.Web.ViewModels.PessoaViewModel

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

<div class="form-group">
    @Html.LabelFor(model => model.Nome, new { @class = "col-form-label" })
    <div class="col-12">
        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Descricao, new { @class = "col-form-label" })
    <div class="col-12">
        @Html.TextAreaFor(model => model.Descricao, new { @class = "form-control col-8", @rows = "10" })
        @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
    </div>
</div>
