@if (TempData["Message"] != null)
{
    <div class="alert alert-dismissible alert-success fade col-12" role="alert">
        @Html.Raw(TempData["Message"])
        <button class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">
                &times;
            </span>
        </button>
    </div>
}
