@model IEnumerable<RocamERP.Domain.Models.Cidade>

@if (Model.Any())
{
    <table class="table table-hover">
        @foreach (var cidade in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => cidade.CidadeId)
                </td>
                <td>
                    @Html.DisplayFor(model => cidade.Nome)
                </td>
                <td>
                    @Html.DisplayFor(model => cidade.Estado.Nome)
                </td>
            </tr>
        }
    </table>
}

<script>
    $(document).ready(function () {
        $(document).ready(function () {
            $("tr").click(function () {
                var rootElement = $("#cidadesTable");
                var id = $(this).children().first().text();
                var name = $(this).children().eq(1).text();
                var compensationCode = $(this).children().eq(2).text();
                document.getElementById("cidadeId").value = id.trim();

                rootElement.children().hide();
                rootElement.append("<strong>" + name + "</strong>")
            })
        })
    })
</script>

