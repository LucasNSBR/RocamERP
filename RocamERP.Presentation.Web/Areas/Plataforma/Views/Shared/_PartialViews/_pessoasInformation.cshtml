@model IEnumerable<RocamERP.Domain.Models.Pessoa>

@if (Model.Any())
{
<table class="table table-hover">
    @foreach (var pessoa in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(model => pessoa.PessoaId)
        </td>
        <td>
            @Html.DisplayFor(model => pessoa.Nome)       
        </td>
        <td>
            @Html.DisplayFor(model => pessoa.CadastroNacional.NumeroDocumento)
        </td>
    </tr>
    }
</table>
}

<script>
    $(document).ready(function () {
        $(document).ready(function () {
            $("tr").click(function () {
                var id = $(this).children().first().text();
                document.getElementById("pessoaId").value = id.trim();
            })
        })
    })
</script>

