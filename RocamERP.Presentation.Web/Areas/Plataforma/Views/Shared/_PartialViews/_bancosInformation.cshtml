@model IEnumerable<RocamERP.Domain.Models.Banco>

@if (Model.Any())
{
    <table class="table table-hover">
        @foreach (var banco in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => banco.BancoId)
                </td>
                <td>
                    @Html.DisplayFor(model => banco.Nome)
                </td>
                <td>
                    @Html.DisplayFor(model => banco.CodigoCompensacao)
                </td>
            </tr>
        }
    </table>
}

<script>
    $(document).ready(function () {
        $("tr").click(function () {
            var rootElement = $("#bancosTable");
            var id = $(this).children().first().text();
            var name = $(this).children().eq(1).text();
            var compensationCode = $(this).children().eq(2).text();
            document.getElementById("bancoId").value = id.trim();

            rootElement.children().fadeOut(100);
            rootElement.append("<strong>" + name + "</strong>")
            $("#bancosInput").fadeOut(300);
            $("#pesquisaBancos").fadeIn(250);
        })
    })
</script>


