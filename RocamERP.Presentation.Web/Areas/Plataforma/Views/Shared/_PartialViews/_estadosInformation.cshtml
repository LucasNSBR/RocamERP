@model IEnumerable<RocamERP.Domain.Models.Estado>

@if (Model.Any())
{
    <table class="table table-hover">
        @foreach (var estado in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => estado.EstadoId)
                </td>
                <td>
                    @Html.DisplayFor(model => estado.Nome)
                </td>
            </tr>
        }
    </table>
}

<script>
    $(document).ready(function () {
        $(document).ready(function () {
            $("tr").click(function () {
                var rootElement = $("#estadosTable");
                var id = $(this).children().first().text();
                var name = $(this).children().eq(1).text();
                document.getElementById("estadoId").value = id.trim();

                rootElement.children().hide();
                rootElement.append("<strong>" + name + "</strong>")
            })
        })
    })
</script>


