@model RocamERP.Presentation.Web.ViewModels.EstadoViewModel

@{
    ViewBag.Title = $"Editar - {Model.Nome}";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h6>@Model.Nome</h6>
        <hr />
        <div class="m-4">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Nome)
            <div class="form-group">
                <label class="col-form-label" for="input-Nome">Nome:</label>
                @Html.TextBoxFor(e => e.Nome, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Nome, "", new { @class = "text-danger" })
            </div>

            <div class="form-group pt-2">
                <div>
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Página Anterior", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
