@model RocamERP.Presentation.Web.ViewModels.EstadoViewModel

@{
    ViewBag.Title = "Adicionar estado";
}

<h2>Novo</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <h6>Adicionar novo estado</h6>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, new { @class = "col-form-label" })
            <div class="col-12">
                @Html.TextBoxFor(e => e.Nome, new { @class = "form-control" })
                @Html.ValidationMessageFor(e => e.Nome, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row pt-5">
            <div class="col-12">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Página Anterior", "Index")
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
