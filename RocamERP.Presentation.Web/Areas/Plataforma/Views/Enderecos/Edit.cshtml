
@model RocamERP.Presentation.Web.ViewModels.EnderecoViewModel

@{
    ViewBag.Title = $"Editar Endereço - {Model.Rua.Take(20)}..., {Model.Numero}";
}

<h2>Editar</h2>
<h6>Editar dados do endereço</h6>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div>
            @Html.HiddenFor(model => model.EnderecoId)
            @Html.Hidden("InitialCEPValue", Model.CEP)
            @Html.EditorForModel()
        </div>

        @Html.SubmitButton("Editar")
    </div>
}

<div>
    @Html.ActionLink("Página Anterior", "Details", "Pessoas", new { @id = Model.PessoaId }, null)
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")    
}