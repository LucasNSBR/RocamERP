@model RocamERP.Presentation.Web.ViewModels.EnderecoViewModel

@{
    ViewBag.Title = $"Editar Endereço";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div>
        <h6>Editar dados do endereço</h6>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div>
            @Html.EditorForModel()
        </div>

        <div class="form-group row pt-5">
            <div class="col-12">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Página Anterior", "Details", "Pessoas", new { @id = Model.PessoaId }, null)
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")    
}