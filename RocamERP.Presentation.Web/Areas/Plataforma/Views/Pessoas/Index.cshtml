@using RocamERP.Presentation.Web.Extensions;

@model IEnumerable<RocamERP.Presentation.Web.ViewModels.PessoaViewModel>

@{
    ViewBag.Title = "Pessoas";
}

<h2>Pessoas</h2>

<p class="pb-0">
    <span class="fa fa-plus text-primary"></span>
    @Html.ActionLink("Novo", "Create")
</p>

<div class="pb-4 pt-0">
    @using (Html.BeginForm("Index", "Pessoas", FormMethod.Get))
    {
        <div class="input-group">
            @Html.TextBox("prefix", null, new { @class = "form-control col-12", @placeholder = "Digite o nome da pessoa..." })
            <span class="input-group-btn" type="submit">
                <button class="btn btn-primary" type="submit">Pesquisar</button>
            </span>
        </div>
    }
</div>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead class="reset-border">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CadastroNacional.NumeroDocumento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CadastroEstadual.NumeroDocumento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cheques)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pessoa in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => pessoa.Nome)
                    </td>
                    <td>
                        @($"{pessoa.CadastroEstadual?.NumeroDocumento?.ToUpper()?.FormatCadastroEstadual() ?? "Não registrado"}")
                    </td>
                    <td>
                        @($"{pessoa.CadastroNacional?.NumeroDocumento?.ToUpper()?.FormatCadastroNacional() ?? "Não registrado"}")
                    </td>
                    <td>
                        @(pessoa.Cheques.Count() > 0 ? pessoa.Cheques.Count().ToString() : "Nenhum")
                    </td>
                    <td class="text-right">
                        @Html.ActionLink("Editar", "Edit", new { id = pessoa.PessoaId }) |
                        @Html.ActionLink("Detalhes", "Details", new { id = pessoa.PessoaId }) |
                        @Html.ActionLink("Excluir", "Delete", new { id = pessoa.PessoaId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="pt-5">
        Nenhum registro encontrado.
    </p>
}
