@model RocamERP.Presentation.Web.ViewModels.PessoaViewModel

@{
    ViewBag.Title = "Novo";
}

<div>
    <h2>Novo</h2>
    <h6>Adicionar novo cliente</h6>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal px-4">
        <div>
            <div class="mx-2 pt-2">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <fieldset>
                    <legend>
                        Cadastro Nacional (CNPJ/CPF)
                    </legend>

                    <div class="px-4">
                        @Html.EditorForModel("CadastroNacionalViewModel", "CadastroNacional")
                    </div>
                </fieldset>

                <fieldset>
                    <legend>
                        Cadastro Estadual (Inscrição Estadual/RG)
                    </legend>

                    <div class="px-4">
                        @Html.EditorForModel("CadastroEstadualViewModel", "CadastroEstadual")
                    </div>
                </fieldset>

                <div class="form-group">
                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "col-form-label" })
                    <div class="col-12">
                        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "col-form-label" })
                    <div class="col-12">
                        @Html.TextAreaFor(model => model.Descricao, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group pt-4">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enviar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Página Anterior", "Index")
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}