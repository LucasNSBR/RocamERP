@model RocamERP.Presentation.Web.ViewModels.PessoaViewModels.PessoaViewModel

@{
    ViewBag.Title = "Novo";
}

<h2>Novo</h2>
<h6>Adicionar nova pessoa</h6>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <fieldset>
            <legend>Dados básicos</legend>
            <div>
                @Html.EditorForModel()
            </div>
        </fieldset>

        <fieldset class="my-4">
            <legend>
                Cadastro Nacional (CNPJ/CPF)
            </legend>

            <div class="px-4">
                @Html.EditorForModel("CadastroNacionalViewModel", "CadastroNacional")
            </div>
        </fieldset>

        <fieldset class="my-4">
            <legend>
                Cadastro Estadual (Inscrição Estadual/RG)
            </legend>

            <div class="px-4">
                @Html.EditorForModel("CadastroEstadualViewModel", "CadastroEstadual")
            </div>
        </fieldset>
    </div>

    @Html.SubmitButton("Adicionar")
}

<div>
    @Html.ActionLink("Página Anterior", "Index")
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}