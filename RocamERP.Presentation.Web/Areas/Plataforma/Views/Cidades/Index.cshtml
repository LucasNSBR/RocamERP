@model IEnumerable<RocamERP.Presentation.Web.ViewModels.CidadeViewModel>

@{
    ViewBag.Title = "Cidades";
}

<h2>Cidades</h2>

<p>
    <span class="fa fa-plus text-primary"></span>
    @Html.ActionLink("Novo", "Create")
</p>

<div>
    @using (Html.BeginForm("Index", "Cidades", FormMethod.Get))
    {
        <div class="form-group row">
            <div class="col-8 pr-0">
                @Html.TextBox("prefix", null, new { @class = "form-control col-12", @placeholder = "Digite o nome da cidade..." })
            </div>
            <div class="col-4 pl-1">
                <div class="input-group">
                    @Html.DropDownList("Estado", null, "Todos", new { @class = "form-control col-8" })
                    <span class="input-group-btn pl-1">
                        <button class="btn btn-primary" type="submit">Pesquisar</button>
                    </span>
                </div>
            </div>
        </div>
    }
</div>

<div>

</div>

@if (Model.Any())
{
    <table class="table">
        <thead class="reset-border">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EstadoId)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.EstadoId)
                    </td>
                    <td class="text-right">
                        @Html.ActionLink("Editar", "Edit", new { id = item.CidadeId }) |
                        @Html.ActionLink("Detalhes", "Details", new { id = item.CidadeId }) |
                        @Html.ActionLink("Excluir", "Delete", new { id = item.CidadeId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5">
        @Html.Raw("Nada encontrado.")
    </div>
}
