@using RocamERP.Presentation.Web.Extensions

@model IEnumerable<RocamERP.Presentation.Web.ViewModels.CidadeViewModel>

@{
    ViewBag.Title = "Cidades";
}

<h2>Cidades</h2>

<p>
    @Html.ActionLink("Adicionar Novo", "Create")
</p>
<table class="table">
    <thead class="reset-border">
        <tr>
            <th>
                Cidade
            </th>
            <th>
                Estado
            </th>
            <th>
                CEP
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Nome
                </td>
                <td>
                    @item.EstadoId
                </td>
                <td>
                    @item.CEP.FormatCEP()
                </td>
                <td class="text-right">
                    @Html.ActionLink("Editar", "Edit", new { id = item.Nome }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Nome }) |
                    @Html.ActionLink("Excluir", "Delete", new { id = item.Nome })
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/custom-js");    
}
